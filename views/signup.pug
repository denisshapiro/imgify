extends layout

block content
    .container.mt-5
      .row.justify-content-md-center
        .col-8.p-5
            h1.text-center.text-muted Sign up
            br
            div.shadow.p-3
                form(method='POST', action='')
                    .form-group
                        label(for='username') Username
                        input.form-control(type='text', name='username', placeholder='Username', value=(undefined===user ? '' : user.username))
                    .form-group
                        label(for='password') Password
                        input.form-control(type='password', name='password', placeholder='Password')
                        small.form-text.text-muted Your password must be at least 7 characters
                    .form-group
                        label(for='confirmPassword') Confirm Password
                        input.form-control(type='password', name='confirmPassword', placeholder='Confirm Password')
                    .text-center
                        button.btn.red-bg.text-light(type='submit') Sign up
                .row.mt-4
                if errors
                    for error in errors
                        .alert.alert-info!= error.msg
                .text-center.mt-4
                    a.link(href='/log-in') Already have an account? Log in
