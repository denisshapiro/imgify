    nav.navbar.navbar-expand-lg.navbar-dark.red-bg.fixed-top
      a.navbar-brand(href="/") imgify
      div.collapse.navbar-collapse(id="searchbar")
        form.form-inline.mx-auto(id="one")
          input.tagbox(type="search" aria-label="Search")

      ul.navbar-nav.ml-auto
        if user
          li.nav-item
            a.nav-link(href='/upload') Upload Photo
          li.nav-item
            a.nav-link(href='/log-out') Log out
          li.nav-item
            a.nav-link.text-white(href=`/user/${user.id}`, aria-disabled='false') #{user.username}
        else
          li.nav-item.mr-sm-2
            a.btn.btn-outline-light(href='/log-in') Log in 
          li.nav-item.my-2.my-sm-0
            a.btn.btn-outline-light(href='/sign-up') Sign up
    br

    div
      block content

